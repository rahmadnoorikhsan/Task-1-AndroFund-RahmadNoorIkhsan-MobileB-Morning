<resources>
    <!-- Base application theme. -->
    <style name="Base.Theme.BirthdayCard" parent="Theme.Material3.Light.NoActionBar">
        <item name="colorPrimary">@color/blue</item>
        <item name="android:windowLightStatusBar">true</item>
        <item name="android:colorBackground">@color/design_default_color_background</item>
        <item name="android:statusBarColor">@color/design_default_color_background</item>
        <item name="android:windowTranslucentStatus">true</item>
        <item name="android:windowTranslucentNavigation">true</item>
    </style>

    <style name="Theme.MyApp.MySplash" parent="Theme.SplashScreen">
        <item name="windowSplashScreenBackground">#FFFFFF</item>
        <item name="windowSplashScreenAnimatedIcon">@drawable/birthday_greeting</item>
        <item name="windowSplashScreenAnimationDuration">300</item>
        <item name="postSplashScreenTheme">@style/Base.Theme.BirthdayCard</item>
    </style>
</resources>